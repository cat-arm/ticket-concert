// Use Prisma with sqlite because it easy to handle in local
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum ReservationStatus {
  RESERVED
  CANCELLED
}

model Concert {
  id            String        @id @default(uuid())
  name          String
  description   String
  totalSeats    Int
  reservations  Reservation[]
  createdAt     DateTime      @default(now())
}

model Reservation {
  id         String             @id @default(uuid())
  sessionId  String              // Use session ID instead of userId for anonymous reservations
  concertId  String
  status     ReservationStatus  @default(RESERVED)
  createdAt  DateTime           @default(now())
  concert    Concert  @relation(fields: [concertId], references: [id])
  // limit 1 session for 1 ticket of type of concert for 1 reservation
  @@unique([sessionId, concertId], name: "sessionId_concertId")
}
